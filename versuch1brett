package Praktikum4;

public class Brett {
    private int breite;
    private double preis;
    private String holzTyp;
    private int LAENGE = 20;
    private int DICKE = 4;

    Brett (String holzTyp){
        this.holzTyp = holzTyp;
    }

    Brett (int breite, String holzTyp) {
        this.breite = breite;
        this.holzTyp = holzTyp;
    }

    Brett (int breite) {
        this.breite = breite;
        this.holzTyp = "Buche";
    }

    void preisAenderung (double preis) {
        this.preis = this.preis - preis;
    }

    public int getBreite() {
        return breite;
    }

    public void setBreite(int breite) {
        this.breite = breite;
    }

    public double getPreis() {
        return preis;
    }

    public void setPreis(double preis) {
        this.preis = preis;
    }

    public String getHolzTyp() {
        return holzTyp;
    }

    public void setHolzTyp(String holzTyp) {
        this.holzTyp = holzTyp;
    }
}
